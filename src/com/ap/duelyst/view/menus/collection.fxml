<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ap.duelyst.view.menus.CollectionController">
   <children>
      <VBox fx:id="mainBox" alignment="TOP_CENTER">
         <children>
            <HBox alignment="TOP_CENTER">
               <children>
                  <ImageView fx:id="gameLogo" fitHeight="100.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="usernameLabel" text="Label" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TableView fx:id="collectionTable" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <TableView fx:id="deckTable" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Button fx:id="addToDeckButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="&gt;&gt;" />
                  <Button fx:id="removeFromDeckButton" alignment="CENTER" mnemonicParsing="false" text="&lt;&lt;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="createNewDeckButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Create New Deck" />
                  <Button fx:id="setAsMainDeckButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Set As Main Deck" />
                  <Button fx:id="changeDeckButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Change Deck" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="importDeckButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Import Deck" />
                  <Button fx:id="exportDeckButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Export Deck" />
                  <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Exit" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="DeckBox" alignment="CENTER" maxHeight="300.0" maxWidth="200.0" prefHeight="300.0" prefWidth="200.0" visible="false">
         <children>
            <TableView fx:id="listOfDecks" maxHeight="300.0" maxWidth="200.0" opacity="0.8">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button fx:id="selectDeckButton" mnemonicParsing="false" text="Select" />
         </children>
      </VBox>
      <VBox fx:id="newDeckBox" alignment="CENTER" maxHeight="80.0" maxWidth="300.0" spacing="10.0" style="-fx-background-color: blue;" visible="false">
         <children>
            <TextField fx:id="nameOfNewDeck" alignment="CENTER" maxHeight="25.0" maxWidth="200.0" promptText="Enter name of the new deck" />
            <Button fx:id="submitNameOfNewDeck" mnemonicParsing="false" text="Create" />
         </children>
      </VBox>
      <VBox fx:id="errorBox" alignment="CENTER" maxHeight="200.0" maxWidth="500.0" prefHeight="100.0" prefWidth="500.0" spacing="10.0" style="-fx-background-color: yellow;" visible="false">
         <children>
            <Label fx:id="errorLabel" alignment="CENTER" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: green;" text="Message!" />
            <Button fx:id="exitErrorBox" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Back" />
         </children>
      </VBox>
   </children>
</StackPane>
