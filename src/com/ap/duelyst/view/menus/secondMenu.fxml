<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox fx:id="mainBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ap.duelyst.view.menus.SecondMenuController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="gameLogo" fitHeight="100.0" fitWidth="600.0" pickOnBounds="true"
                           preserveRatio="true"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="userNameLabel" alignment="CENTER_RIGHT"
                       style="-fx-font-size: 14pt; -fx-font-weight: bold; -fx-font-family: &quot;Times New Roman&quot;;"
                       text="username : " textFill="#2b0e72"/>
            </children>
        </HBox>
        <VBox alignment="CENTER" spacing="16.0">
            <children>
                <Button fx:id="battleButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Battle"/>
                <Button fx:id="collectionButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0"
                        text="Collection"/>
                <Button fx:id="shopButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Shop"/>
                <Button fx:id="customButton" mnemonicParsing="false" onAction="#showCustomCard" prefHeight="60.0" prefWidth="200.0"
                        text="Custom Card"/>
                <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Exit"/>
            </children>
        </VBox>
    </children>
</VBox>
